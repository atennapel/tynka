import "lib/Base"

def IO/return = returnIO
def IO/bind = bindIO

def IO/seq {A B : VTy} (a : IO A) (b : IO B) : IO B =
  IO/bind a \_. b

def IO/map {A B : VTy} (f : A -> B) (io : IO A) : IO B =
  IO/bind io (\x. IO/return (f x))

def IO/fix {A : VTy} (action : IO A -> IO A) : IO A =
  fix (go _. action (go U)) U
